<article class="library__card" id="video-<%= video.vimeo_id %>">
  <header class="library__header">
    <% primary_category = video.library_class.library_categories.first %>
    <p class="library__meta">
      <% if primary_category %>
        <span class="library__category"><%= primary_category.name %></span>
      <% end %>
    </p>
    <h3 class="library__title"><%= video.title %></h3>
  </header>

  <div class="library__iframe" style="<%= video.aspect_style %>">
    <iframe
      loading="lazy"
      src="<%= video.player_src %>"
      allow="autoplay; fullscreen; picture-in-picture; clipboard-write"
      allowfullscreen
      referrerpolicy="strict-origin-when-cross-origin"
      title="<%= video.title %>">
    </iframe>
  </div>

  <div class="library__actions">
    <%= download_button_for(video) %>
  </div>
  <p class="library__description"><%= video.description %></p>
</article>
